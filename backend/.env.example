# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/picklehub?schema=public"

# Google OAuth
GOOGLE_CLIENT_ID_IOS="your-ios-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_ID_WEB="your-web-client-id.apps.googleusercontent.com"

# Server
NEXT_PUBLIC_API_URL="http://localhost:3001"
WEBSOCKET_PORT=3002

# Email (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM_NAME="PickleHub"
EMAIL_FROM_ADDRESS="noreply@yourdomain.com"

# Cron Secret (for securing cron endpoints)
CRON_SECRET="your-cron-secret"
